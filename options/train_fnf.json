{
  "task": "pattern_fnf_recon" // task name
  , "model": "plain"
  , "gpu_ids": [0,1] // gpu device ids
  , "dist": true
  
  , "n_channels": 12  // ambient scaled RGGB raw image (4) + flash scaled RGGB raw image (4) + calibrated RGGB pattern (4)
  
  , "restore": false // new param
  , "path": {
    "root": "/home/szhbchr/compare_swinir_kair/" // log directory
    , "pretrained_netG": null      // path of pretrained model
    , "pretrained_netE": null      // path of pretrained model
    , "restore": null
  }

  , "datasets": {
    "train": {
      "name": "train_dataset" // name
      , "dataset_type": "fnf_data" // "pf_data" or "fnf_data"
      , "dataroot_H": "/home/szhbchr/FT3D/frames_cleanpass/"// path of training dataset
      , "pattern_dir": "captured_data/pf_pattern_calib.npy" // path of pattern directory
      , "pattern_boost": 16 // (1/(pattern occupancy))^2, see paper for details
      , "H_size":320
      , "W_size":448
      , "disp_clip": 3.0 // maximum disparity
      , "depth_clip": 4.0 // maximum depth
      , "dataloader_shuffle": true
      , "dataloader_num_workers": 4
      , "dataloader_batch_size": 4
      , "min_refscale": 0.003 // minimum ambient power
      , "max_refscale": 0.01 // maximum ambient power
      , "min_noise": 0.002 // minimum gaussian noise
      , "max_noise": 0.005 // maximum gaussian noise
      , "min_power": 0.005 // minimum flash power
      , "max_power": 0.015 // maximum flash power
      , "band": 0.0005 // "row" noise
      , "min_poiss_K": 2.0 // minimum Poisson K
      , "max_poiss_K": 6.0 // maximum Poisson K
      , "split": "train" // dataset split
    }
    , "test": {
      "name": "test_dataset" // name
      , "dataset_type": "fnf_data" // "pf_data" or "fnf_data"
      , "dataroot_H": "/home/szhbchr/FT3D/frames_cleanpass/"// path of training dataset
      , "pattern_dir": "captured_data/pf_pattern_calib.npy" // path of pattern directory
      , "pattern_boost": 16 // (1/(pattern occupancy))^2, see paper for details
      , "H_size":320
      , "W_size":448
      , "disp_clip": 3.0 // maximum disparity
      , "depth_clip": 4.0 // maximum depth
      , "min_refscale": 0.003 // minimum ambient power
      , "max_refscale": 0.01 // maximum ambient power
      , "min_noise": 0.002 // minimum gaussian noise
      , "max_noise": 0.005 // maximum gaussian noise
      , "min_power": 0.005 // minimum flash power
      , "max_power": 0.015 // maximum flash power
      , "band": 0.0005 // "row" noise
      , "min_poiss_K": 2.0 // minimum Poisson K
      , "max_poiss_K": 6.0 // maximum Poisson K
      , "split": "val" // dataset split
    }
  }

  , "netG": {
    "net_type": "ResUNet" // model type
    , "init_type": "default"
    , "in_chans": 12 // input channels
    , "out_chans": 8 // output channels
    , "disp_clip": 3.0 // maximum disparity
    , "H": 320
    , "W": 448
  }
  
  , "train": {
    "G_lossfn_type": "fnf_edge_dloss"
    , "lam_vgg": 0.01
    , "lam_edge": 1.0
    , "lam_recp": 1.0
    , "lam_dloss": 0.01
    , "pattern_boost": 16 // (1/(pattern occupancy))^2, see paper for details
    , "depth_clip": 4.0 // maximum depth
    , "disp_clip": 3.0 // maximum disparity
    , "G_lossfn_weight": 1.0            // default
    , "G_charbonnier_eps": 1e-9

    , "E_decay": 0.999                  // Exponential Moving Average for netG: set 0 to disable; default setting 0.999

    , "G_optimizer_type": "adam"        // fixed, adam is enough
    , "G_optimizer_lr": 2e-4            // learning rate
    , "G_optimizer_wd": 0               // weight decay, default 0
    , "G_optimizer_clipgrad": null      // unused
    , "G_optimizer_reuse": true         // 

    , "G_scheduler_type": "MultiStepLR" // "MultiStepLR" is enough
    , "G_scheduler_milestones": [800000, 1200000, 1400000, 1500000, 1600000]
    , "G_scheduler_gamma": 0.5

    , "G_regularizer_orthstep": null    // unused
    , "G_regularizer_clipstep": null    // unused

    , "G_param_strict": true
    , "E_param_strict": true

    , "checkpoint_test": 1000           // for testing
    , "checkpoint_save": 20000           // for saving model
    , "checkpoint_print": 200          // for print
  }
}
